<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbar_without_title">


    <RelativeLayout
        android:id="@+id/relLaysourceDest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10dp"
        android:background="@color/color_light_grey">

        <ImageView
            android:id="@+id/imgViewBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_10dp"
            android:paddingBottom="@dimen/margin_2dp"
            android:paddingTop="@dimen/margin_2dp"
            android:tint="@color/color_black"
            android:src="@mipmap/ic_back" />


        <TextView
            android:id="@+id/txtViewToolSourceAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delhi, India"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_toRightOf="@+id/imgViewBackArrow"
            android:textSize="@dimen/txt_size_16sp"
            android:textColor="@color/color_black"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/txtViewToolDestinationAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noida, Uttar Pradesh, India"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_toRightOf="@+id/imgViewBackArrow"
            android:layout_below="@+id/txtViewToolSourceAddress"
            android:textSize="@dimen/txt_size_16sp"
            android:textColor="@color/color_black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewToolDestinationAddress"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_toRightOf="@+id/imgViewBackArrow"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtViewToolDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomorrow,"
                android:textSize="@dimen/txt_size_15sp"
                android:textStyle="bold"
                android:textColor="@color/color_grey"
                />


            <TextView
                android:id="@+id/txtViewToolTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:layout_marginLeft="@dimen/margin_3dp"
                android:textSize="@dimen/txt_size_15sp"
                android:textStyle="bold"
                android:textColor="@color/color_grey"
                />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>