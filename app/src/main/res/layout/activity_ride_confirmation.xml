<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.braintech.carpooling.mvp.offer_a_ride.activity.RideConfirmationActivity">

    <include layout="@layout/toolbar_without_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linLayObjectUpload"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_below="@+id/toolbar_without_title"
        android:background="@drawable/drawable_round_grey"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgViewUpload"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@mipmap/app_icon"
            android:adjustViewBounds="true" />



<!--
        <ImageView
            android:id="@+id/imgViewCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_camera" />

        <TextView
            android:id="@+id/txtViewTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:text="@string/title_take_photo"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/text_size_14_dp" />-->

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relLayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linLayObjectUpload"
        android:layout_marginTop="@dimen/margin_10dp"
        android:padding="@dimen/margin_10dp">

        <TextView
            android:id="@+id/txtViewNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

        <TextView
            android:id="@+id/txtViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_toRightOf="@+id/txtViewNameTitle"
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLaySource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayName"
        android:padding="@dimen/margin_10dp">

        <TextView
            android:id="@+id/txtViewSourceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source: "
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

        <TextView
            android:id="@+id/txtViewSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_toRightOf="@+id/txtViewSourceTitle"
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayDestoination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLaySource"
        android:padding="@dimen/margin_10dp">

        <TextView
            android:id="@+id/txtViewDestinationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination: "
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

        <TextView
            android:id="@+id/txtViewDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_toRightOf="@+id/txtViewDestinationTitle"
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayNumberOfSeats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayDestoination"
        android:padding="@dimen/margin_10dp">

        <TextView
            android:id="@+id/txtViewNumberOfSeatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of seats: "
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

        <TextView
            android:id="@+id/txtViewNumberOfSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of seats"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_toRightOf="@+id/txtViewNumberOfSeatsTitle"
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayNumberOfSeats"
        android:padding="@dimen/margin_10dp">

        <TextView
            android:id="@+id/txtViewDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey date: "
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

        <TextView
            android:id="@+id/txtViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey date"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_toRightOf="@+id/txtViewDateTitle"
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayDate"
        android:padding="@dimen/margin_10dp">

        <TextView
            android:id="@+id/txtViewTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey time: "
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

        <TextView
            android:id="@+id/txtViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey time"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_toRightOf="@+id/txtViewTimeTitle"
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_17sp"
            android:textColor="@color/color_grey"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayTime"
        android:padding="@dimen/margin_10dp">

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_button_background_blue"
            android:text="Accept"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:textSize="@dimen/txt_size_15sp"/>


        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/drawable_button_background_blue"
            android:text="Cancel"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/margin_15dp"
            android:textSize="@dimen/txt_size_15sp"/>

    </RelativeLayout>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>
