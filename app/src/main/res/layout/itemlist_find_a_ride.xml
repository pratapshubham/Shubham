<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    android:elevation="@dimen/margin_5dp">

    <RelativeLayout
        android:id="@+id/relLayTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_item_your_booking_rect_transparent">

        <RelativeLayout
            android:id="@+id/relLayAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTime"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp">


            <TextView
                android:id="@+id/txtViewSourceAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="@string/title_address"
                android:textColor="@color/color_light_grey_1"
                android:textSize="@dimen/txt_size_18sp" />


            <TextView
                android:id="@+id/txtViewCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_toRightOf="@+id/txtViewSourceAddress"
                android:text=">>"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/txt_size_18sp" />


            <TextView
                android:id="@+id/txtViewDestinationAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_toRightOf="@+id/txtViewCharacter"
                android:text="@string/title_car_owner_name"
                android:textColor="@color/color_light_grey_1"
                android:textSize="@dimen/txt_size_18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relLayAddress"
            android:layout_marginTop="@dimen/margin_5dp"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp">

            <TextView
                android:id="@+id/txtViewPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/title_price"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/txt_size_18sp" />


            <TextView
                android:id="@+id/txtViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="-5dp"
                android:layout_toRightOf="@+id/txtViewPriceTitle"
                android:textSize="@dimen/txt_size_18sp" />

            <ImageView
                android:id="@+id/imgViewRuppess"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:layout_toRightOf="@+id/txtViewPrice"
                android:src="@mipmap/ic_rupee" />

        </RelativeLayout>

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:layout_below="@+id/relLayPrice"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@color/color_grey"></View>


        <RelativeLayout
            android:id="@+id/relLayOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewLine"
            android:layout_marginTop="@dimen/margin_5dp"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp">

            <ImageView
                android:id="@+id/imgViewCarIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/app_icon" />

            <TextView
                android:id="@+id/txtViewOwnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_toRightOf="@+id/imgViewCarIcon"
                android:textSize="@dimen/txt_size_18sp" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>